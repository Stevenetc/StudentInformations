<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentInformation</title>

    <!-- Link to Google Fonts for better typography -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&family=Roboto:wght@400;500&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentInformation.styles.css" asp-append-version="true" />

    <style>
        /* Apply Poppins as default font for the body */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa; /* Light background color */
            background-image: url('~/images/background.jpg'); /* Set background image */
            background-size: cover; /* Ensure the image covers the entire page */
            background-position: center center; /* Center the background image */
        }

        /* Navbar styles */
        .navbar {
            background-color: #343a40 !important; /* Dark navbar for contrast */
        }

        .navbar-brand {
            font-weight: bold;
        }

        .nav-link {
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: #ff9900; /* A bright color for hover effect */
            }

        .container {
            padding-top: 20px;
        }

        /* Footer styles */
        footer {
            background-color: #343a40;
            color: white;
            padding: 10px 0;
            text-align: center;
        }

            footer a {
                color: #ff9900;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        /* Card styles */
        .card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Button styling */
        .btn-primary {
            background-color: #0069d9;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .card-body {
            padding: 30px;
        }

        /* Apply font to buttons and links */
        .btn {
            font-family: 'Roboto', sans-serif;
        }

        .nav-link, footer a {
            font-family: 'Roboto', sans-serif;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <!-- Logo added here -->
                <a class="navbar-brand fw-bold me-auto" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Student Info Logo" height="40"> Student Info
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-center" id="navbarNavDropdown">
                    <ul class="navbar-nav mb-2 mb-lg-0" style="margin-left: -150px;">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Student" asp-action="Index">Students</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <!-- Main content image -->
            <img src="~/images/student-banner.jpg" alt="Student Banner" class="img-fluid rounded mb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <!-- Footer logo -->
            <img src="~/images/footer-logo.png" alt="Footer Logo" height="20" />
            &copy; 2025 - StudentInformation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Script imports -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
